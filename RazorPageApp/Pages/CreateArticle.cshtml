@page
@model RazorPageApp.Pages.CreateArticleModel
@{
}

<div class="row">
    
    <div class="col-12 mb-3">
        @if (TempData["error"] is not null)
        {
            <div class="alert alert-danger">
                @TempData["error"]
            </div>
        }
        <div class="col-6 mr-auto ml-auto text-center">
            <h1 class="border-bottom">ایجاد مقاله جدید</h1>
        </div>
    </div>

    <form class="mr-auto ml-auto" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.CreateArticle.Title">عنوان مقاله</label>
                <input class="form-control" asp-for="@Model.CreateArticle.Title">
                <span asp-validation-for="@Model.CreateArticle.Title"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.CreateArticle.Picture">عکس</label>
                <input class="form-control" asp-for="@Model.CreateArticle.Picture">
                <span asp-validation-for="@Model.CreateArticle.Picture"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.CreateArticle.PictureAlt">ALT عکس</label>
                <input class="form-control" asp-for="@Model.CreateArticle.PictureAlt">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.CreateArticle.PictureTitle">Title عکس</label>
                <input class="form-control" asp-for="@Model.CreateArticle.PictureTitle">
            </div>
            <div class="form-group col-md-12">
                <label asp-for="@Model.CreateArticle.ShortDescription">توضیحات کوتاه</label>
                <textarea class="form-control" asp-for="@Model.CreateArticle.ShortDescription"></textarea>
                <span asp-validation-for="@Model.CreateArticle.ShortDescription"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CreateArticle.Body">متن مقاله</label>
                <textarea rows="5" type="text" class="form-control" asp-for="@Model.CreateArticle.Body"></textarea>
            </div>
        </div>
        
        <button type="submit" class="btn btn-success">ارسال</button>
    </form>
</div>